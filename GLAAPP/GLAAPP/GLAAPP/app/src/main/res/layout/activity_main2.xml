<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/body_container"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="410dp"
        android:layout_height="172dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/backgnd" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/water"
        android:layout_width="265dp"
        android:layout_height="221dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="410dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/ai" />

    <Button
        android:id="@+id/baba"
        android:layout_width="171dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="213dp"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@+id/water"
        android:background="@android:color/transparent"
        android:text="Aneron"
        android:textSize="20sp"/>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="295dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="340dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_notifications_24" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="283dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="49dp">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="266dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="90dp"
        android:text="Gla" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="337dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_calendar_month_24" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="337dp"
        android:layout_toEndOf="@+id/imageButton3"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_feedback_24" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_above="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="431dp"
        android:layout_marginEnd="295dp"
        android:layout_marginBottom="-141dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_help_center_24" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="240dp"
        android:layout_height="561dp"
        android:layout_above="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="600dp"
        android:layout_marginTop="933dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="-138dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_info_24" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="204dp"
        android:layout_height="268dp"
        android:layout_above="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="680dp"
        android:layout_marginTop="655dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="433dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_upgrade_24" />


</RelativeLayout>